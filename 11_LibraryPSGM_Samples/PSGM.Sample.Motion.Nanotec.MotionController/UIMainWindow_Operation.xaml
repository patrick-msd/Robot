<Window x:Class="RC.Motion.Nanotec.Sample.UIMainWindow_Operation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RC.Motion.Nanotec.Sample"
        mc:Ignorable="d"
        Title="UIMainWindows_Operation" Height="616" Width="942">
    <Grid>
        <GroupBox Header="Control" Margin="0,0,612,310">
            <Canvas>
                <Button Content="Power on" Canvas.Left="10" Canvas.Top="7" HorizontalAlignment="Center" VerticalAlignment="Top" Width="156" Click="PowerOn_Click"/>
                <Button Content="Power off" Canvas.Left="10" Canvas.Top="30" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top" Click="PowerOff_Click"/>
                <Button Content="Quickstop" Canvas.Left="10" Canvas.Top="53" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Quickstop_Click"/>
                <!-- <Button Content="Halt" Canvas.Left="10" Canvas.Top="76" Width="156" HorizontalAlignment="Center" VerticalAlignment="Top"/> -->
            </Canvas>

        </GroupBox>
        <GroupBox Header="Mode" Margin="188,0,429,310">
            <Canvas>
                <Label x:Name="ActivateMode" Content="Activate Mode: " Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Width="166" Height="56" FontSize="10"/>
            </Canvas>
        </GroupBox>
