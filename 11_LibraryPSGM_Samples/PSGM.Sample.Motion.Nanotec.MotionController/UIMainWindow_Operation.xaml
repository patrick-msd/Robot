                    <Button Content="Save" Canvas.Left="220" Canvas.Top="17" HorizontalAlignment="Left" VerticalAlignment="Top" Width="42"/>
                    <Button Content="Restart" Canvas.Left="220" Canvas.Top="63" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                    </Canvas>
            </GroupBox>
