  </ItemGroup>

  <ItemGroup>
    <Page Update="UISplashScreen.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="XCOPY &quot;$(SolutionDir)01_Library\Motion\Nanotec\Release\$(Platform)\*&quot; &quot;$(OutDir)\&quot; /Y /S&#xD;&#xA;XCOPY &quot;$(SolutionDir)01_Library\Robot\Doosan\Release\$(Platform)\*&quot; &quot;$(OutDir)&quot; /Y /S" />
